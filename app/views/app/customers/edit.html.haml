
.header
  .container-fluid
    .header-body
      .row.align-items-end
        .col
          %h6.header-pretitle
            Overview
          %h1.header-title
            Edit Customer
        .col-auto
          = link_to 'Receive First Payment', "#{new_receiving_path}?customer_id=#{@customer.id}&term=first" , class: "btn btn-danger lift" unless @customer.first_receiving?
          = link_to 'Sent Welcome Message', "#{new_message_path}?number=#{@customer.mobile_primary}", class: "btn btn-success lift" unless @customer.welcome_message?
.container-fluid   
  = render 'form', customer: @customer
             