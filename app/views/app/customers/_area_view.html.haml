.card
  .card-body
    .list-group.list-group-flush
      .list-group-item
        .row.align-items-center
          .col
            %h1.header-title
              Area
          
    .list-group.list-group-flush
      .list-group-item
        .row.align-items-center
          .col
            / Title
            %small Country
          .col-auto
            / Link
            %a.small.text-muted
              = customer&.country&.name
      / / .row
      .list-group-item
        .row.align-items-center
          .col
            / Title
            %small City
          .col-auto
            / Link
            %a.small.text-muted
              = customer&.city&.name
              
      .list-group-item
        .row.align-items-center
          .col
            / Title
            %small Area
          .col-auto
            / Text
            %small.text-muted
              = customer&.area&.name
        / / .row
        
      .list-group-item
        .row.align-items-center
          .col
            / Title
            %small Sub Area
          .col-auto
            / Text
            %small.text-muted
              = customer&.country&.name
        / / .row
      .list-group-item
        .row.align-items-center
          .col
            / Title
            %small House No
          .col-auto
            / Link
            %a.small.text-muted
              = customer&.house_no
      
      .list-group-item
        .row.align-items-center
          .col
            / Title
            %small Pon No
          .col-auto
            / Link
            %a.small.text-muted
              = customer&.pon_no
      .list-group-item
        .row.align-items-center
          .col
            / Title
            %small Address
          .col-auto
            / Time
            %time.small.text-muted{:datetime => "1988-10-24"}
              = customer&.address
        / / .row
      .list-group-item
        .row.align-items-center
          .col
            / Title
            %small Remarks
          .col-auto
            / Text
            %small.text-muted
              = customer&.remarks
        