= form_with(model: customer) do |form|
  - if customer.errors.any?
    #error_explanation  
      - customer.errors.full_messages.each do |message|
        .col
          .alert.alert-danger.text-white
            = message
  .card
    .card-header
      %h1.header-title
        Area
    .card-body
      = form.fields_for :customer_area do |customer_area|
        .row
          .col-6                
            .form-group
              = customer_area.label "Country"
              = customer_area.collection_select :country_id, Country.all, :id, :name, {prompt: true}, class: "form-control", required: true
          .col-6
            .form-group
              = customer_area.label "City"
              = customer_area.collection_select :city_id, City.all, :id, :name, {prompt: true}, class: "form-control", required: true
        
        .row
          .col-6                
            .form-group
              = customer_area.label "Area"
              = customer_area.collection_select :area_id, Area.all, :id, :name, {prompt: true}, class: "form-control", required: true
          .col-6                  
            .form-group
              = customer_area.label "Sub Area"
              = customer_area.collection_select :sub_area_id, SubArea.all, :id, :name, {prompt: true}, class: "form-control", required: true
        
        .row
          .col-6
            .form-group
              = customer_area.label "House No"
              = customer_area.text_field :house_no, class: "form-control", placeholder: "Enter House No"
            
          .col-6
            .form-group
              = customer_area.label "Street"
              = customer_area.text_field :street, class: "form-control", placeholder: "Enter Stree"
            
        
        .row
          .col-12 
            .form-group
              = customer_area.label "Address"
              = customer_area.text_area :address, class: "form-control", placeholder: "Enter Adress"
            
        .row 
          .col-12   
            .form-group
              = customer_area.label "Remarks"
              = customer_area.text_area :remarks, class: "form-control", placeholder: "Add Remarks" 
    .card-footer
      .actions
        = form.submit "Submit Area", class: "btn btn-primary"       