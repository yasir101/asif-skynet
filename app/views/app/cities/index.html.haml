        .table-responsive
          %table.table.table-sm.table-nowrap.card-table
            - if @cities.any?
              %thead
                %tr
                  %th #
                  %th Country
                  %th Name
                  %th Action
              %tbody.list
                - @cities.each.with_index(1) do |city, index|
                  %tr
                    %td= index
                    %td= city.country.name
                    %td= city.name
                    %td.text-right
                      = link_to 'Edit', edit_city_path(city), class: "btn btn-outline-info btn-sm"
            - else
              = render 'shared/no_data'
  .row        
    = paginate @cities     
            