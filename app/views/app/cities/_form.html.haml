= form_with(model: city) do |form|
  - if city.errors.any?
    #error_explanation  
      - city.errors.full_messages.each do |message|
        .col
          .alert.alert-danger.text-white
            = message
  .form-group
    = form.label "Country"
    = form.collection_select :country_id, Country.all, :id, :name, {prompt: true}, class: "form-control", required: true
  .form-group
    = form.label :name
    = form.text_field :name, class: "form-control"
  .actions
    = form.submit class: "btn btn-primary"