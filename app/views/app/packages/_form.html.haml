= form_with(model: package) do |form|
  - if package.errors.any?
    #error_explanation  
      - package.errors.full_messages.each do |message|
        .col
          .alert.alert-danger.text-white
            = message
  
  .form-group
    = form.label "Company"
    = form.collection_select :company_id, Company.all, :id, :name, {prompt: true}, class: "form-control", id: "company"
  .form-group
    = form.label "Company Packages"
    = form.collection_select :company_package_id, CompanyPackage.all, :id, :name, {prompt: true}, class: "pakage_selection form-control", required: true
  .form-group
    = form.label :name
    = form.text_field :name, class: "form-control"
  .form-group
    = form.label :price
    = form.number_field :price, class: "form-control"  
  .actions
    = form.submit class: "btn btn-primary"